#!/usr/bin/env node

import env from '../utils/env';
import proxy from '../proxy';
import wd from '../wd';
import stub from '../fixtures/server.js';

proxy.listen(env.proxyPort, function() {
    console.log('proxy listening on', env.proxyPort);
});

wd.listen(env.wdPort, function() {
    console.log('web driver listening on', env.wdPort);
});

if (env.name === 'development') {
    stub.listen(env.stubPort, function() {
        console.log('stub driver listening on', env.stubPort);
    });
}
