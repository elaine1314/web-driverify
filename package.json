{
  "name": "web-driverify",
  "version": "1.0.0",
  "description": "A passive web driver endpoint for real browsers.",
  "main": "bin/wd.js",
  "bin": {
    "wd": "lib/bin/wd.js",
    "web-driverify": "lib/bin/wd.js",
    "wd-phantom": "lib/bin/wd-phantom.js",
    "web-driverify-phantom": "lib/bin/wd-phantom.js"
  },
  "scripts": {
    "start": "node lib/bin/wd",
    "build": "rm -rf lib && npm run build:assets && npm run build:babel && npm run build:files",
    "build:assets": "webpack --progress",
    "build:babel": "babel . --ignore node_modules,assets,test/e2e,test/unit,*.conf* -d lib/",
    "build:files": "cp package.json lib/ && mkdir lib/src/proxy/assets && cp src/proxy/assets/index.bundle.js lib/src/proxy/assets/ && touch lib/src/proxy/assets/favicon.ico && cp -r src/views lib/src/",
    "debug": "webpack && NODE_ENV=development DEBUG=wd:* DEBUG_COLORS=true babel-node bin/debug.js",
    "debug:phantom": "webpack && NODE_ENV=test DEBUG=wd:* DEBUG_COLORS=true babel-node bin/debug-phantom.js",
    "watch": "concurrently \"webpack --watch\" \"NODE_ENV=test DEBUG=wd:* DEBUG_COLORS=true babel-watch bin/debug.js\"",
    "watch:phantom": "concurrently \"webpack --watch\" \"NODE_ENV=test DEBUG=wd:* DEBUG_COLORS=true babel-watch bin/debug-phantom.js\"",
    "wait": "wait-on http://localhost:${WD_PORT:=8089}",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "NODE_ENV=test mocha test/unit --recursive --compilers js:babel-core/register",
    "test:e2e": "concurrently --success first --kill-others \"npm run debug:phantom\" \"npm run wait && npm run test:once\"",
    "test:e2e:without-phantom": "concurrently --success first --kill-others \"npm run debug\" \"npm run wait && npm run test:once\"",
    "test:once": "wdio wdio.conf.js",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-driverify/web-driverify.git"
  },
  "keywords": [
    "proxy",
    "web-driver",
    "mobile"
  ],
  "author": "harttle<yangjvn@126.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/web-driverify/web-driverify/issues"
  },
  "homepage": "https://github.com/web-driverify/web-driverify#readme",
  "dependencies": {
    "@baidu/web-driverify-endpoint-rmtc-enhancement": "0.0.3",
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.0",
    "charset": "^1.0.0",
    "connect-timeout": "^1.8.0",
    "debug": "^2.6.1",
    "express": "^4.14.1",
    "glob": "^7.1.1",
    "iconv-lite": "^0.4.15",
    "js-yaml": "^3.9.0",
    "lodash": "^4.17.4",
    "morgan": "^1.8.0",
    "node-horseman": "^3.2.0",
    "qrcode-terminal": "^0.11.0",
    "request": "^2.79.0",
    "shopify-liquid": "^1.7.1"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.23.0",
    "babel-watch": "^2.0.6",
    "chai": "^3.5.0",
    "concurrently": "^3.4.0",
    "es6-promise": "^4.0.5",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-mocha": "^4.9.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "jquery": "^3.1.1",
    "jquery.event.swipe": "^0.5.4",
    "mocha": "^3.2.0",
    "superagent": "^3.4.1",
    "superagent-charset": "^1.1.1",
    "superagent-proxy": "^1.0.2",
    "supertest": "^3.0.0",
    "wait-on": "^2.0.2",
    "wdio": "^0.3.3",
    "wdio-mocha-framework": "^0.5.8",
    "wdio-spec-reporter": "0.0.5",
    "webdriverio": "^4.6.2",
    "webpack": "^2.2.1"
  }
}
